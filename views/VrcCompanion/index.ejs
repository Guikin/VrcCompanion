
<%- include("../partials/navbar")%>
<body >

    <form class=" d-flex flex-column text-center p-5 m-5" action="/" method="GET">
        <div>
        <label for="popularity">popularity
            <input type="radio" name="sort" id="popularity" value="popularity">
        </label>

        <label for="newest">Newest
            <input type="radio" name="sort" id="name" value="created">
        </label>
        
        <label for="name">Alphabetical
            <input type="radio" name="sort" id="name" value="name">
        </label>

        <input type="text" name="worldName" value="<%=worldName||''%>">

        
        <button>Search</button>
        </div>

        <div class="d-flex justify-content-center m-4">
        <%for(let i=1; i<limitPage+1;i++){%>
            <button class="m-2" name="offset" value="<%=i-1%>"><%=i%></button>
        <%}%>
        </div>

        

    </form>

    <div class="container my-5 ">
    <%worlds.forEach(world =>{%>
        <div class="d-flex my-5">
            <img src="<%=world.thumbnailImageUrl%>" alt="">
                <div class="m-5">
                <h4><%=world.name%></h4>
                <p>Author : <%=world.authorName%></p>   
                <p>Favorites : <%=world.favorites%></p>
                <p>Popularity : <%=world.popularity%></p>
                <p>Published Date : <%=world.publicationDate%></p>
                <a href="/<%=world.id%>"><p>More info</p></a>
                </div>
        </div>
    <%})%>
    </div>

</body>
</html>