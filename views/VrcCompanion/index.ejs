
<%- include("../partials/navbar")%>
<body >

    <form class=" d-flex flex-column text-center px-5 m-5" action="/" method="GET">
        <div>
        <label class="p-2 lead" for="popularity">Popularity</label>
        <%if(lastSort === "popularity" || lastSort ===""){%>
        <input type="radio" name="sort" id="popularity" value="popularity" checked="checked">      
        <%}else{%>
        <input type="radio" name="sort" id="popularity" value="popularity">
        <%}%>
            
        

        <label class="p-2 lead" for="newest">Newest</label>
        <%if(lastSort === "created"){%>
        <input type="radio" name="sort" id="name" value="created" checked="checked">
        <%}else{%>
        <input type="radio" name="sort" id="name" value="created">
        <%}%>
        
        
        <label class="p-2 lead" for="name">Alphabetical</label>
        <%if(lastSort === "name"){%>
        <input type="radio" name="sort" id="name" value="name" checked="checked">
        <%}else{%>
        <input type="radio" name="sort" id="name" value="name">
        <%}%>
        

        <input class="searchBox mx-2" type="text" name="worldName" value="<%=worldName||''%>">

        
        <button class="button ">Search</button>
        </div>

        <div class="d-flex justify-content-center m-4">
        <%for(let i=1; i<limitPage+1;i++){%>
            <button class="m-2 button" name="offset" value="<%=i-1%>">
                <%if(pageNumber===i){%>
                    <u><%=i%></u>
                <%}else{%>
                    <%=i%>
                <%}%>
                
            </button>
        <%}%>
        </div>

        

    </form>

    <div class="container grid my-5 transition-fade fade-in" id="swup">
    <%worlds.forEach(world =>{%>
        <div class="d-sm-flex my-4">
            <img src="<%=world.thumbnailImageUrl%>" alt="">
                <div class="mx-5 pb-5">
                <h4><%=world.name%></h4>
                <p>Author : <%=world.authorName%></p>   
                <p>Favorites : <%=world.favorites%></p>
                <p>Popularity : <%=world.popularity%></p>
                <p>Published Date : <%=world.publicationDate%></p>
                <a class="a" href="/<%=world.id%>"><p class="button info">More info</p></a>
                </div>
        </div>
    <%})%>
    </div>


</body>

</html>